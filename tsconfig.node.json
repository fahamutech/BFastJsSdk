{
  "extends": "./tsconfig.json",
  "include": [
    "./src/**.ts"
  ],
  "compilerOptions": {
    "outDir": "dist/lib",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "es2015",
    "lib": ["es2017", "es7", "es6", "dom"],
    "allowJs": false,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "node",
    "web",
    "specs"
  ]
}
